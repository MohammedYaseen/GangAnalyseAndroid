<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#74b5ff">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:columnOrderPreserved="false"
        android:rowOrderPreserved="true"
        android:alignmentMode="alignBounds"
        android:useDefaultMargins="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rechte Sohle"
            android:id="@+id/textView"
            android:layout_row="1"
            android:layout_column="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Linke Sohle"
            android:id="@+id/textView20"
            android:layout_row="3"
            android:layout_column="0"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightSoleEditText"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/edit_text_style"
            android:width="150dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftSoleEditText"
            android:layout_row="4"
            android:layout_column="0"
            android:width="150dp"
            android:background="@drawable/edit_text_style"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Links Gesamt Max (in N)"
            android:id="@+id/textView23"
            android:layout_row="5"
            android:layout_column="0"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/leftFullMaxEditText"
            android:layout_row="5"
            android:layout_column="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center_horizontal"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Links Gesamt Min (in N)"
            android:id="@+id/textView24"
            android:layout_row="6"
            android:layout_column="0"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/leftFullMinEditText"
            android:layout_row="6"
            android:layout_column="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center_horizontal"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Links Ferse Max (in N)"
            android:id="@+id/textView25"
            android:layout_row="7"
            android:layout_column="0"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/leftHeelMaxEditText"
            android:layout_row="7"
            android:layout_column="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center_horizontal"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Links Ferse Min (in N)"
            android:id="@+id/textView26"
            android:layout_row="8"
            android:layout_column="0"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/leftHeelMinEditText"
            android:layout_row="8"
            android:layout_column="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center_horizontal"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rechts Gesamt Max(in N)"
            android:id="@+id/textView27"
            android:layout_row="9"
            android:layout_column="0"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/rightFullMaxEditText"
            android:layout_row="9"
            android:layout_column="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center_horizontal"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rechts Gesamt Min(in N)"
            android:id="@+id/textView28"
            android:layout_row="10"
            android:layout_column="0"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/rightFullMinEditText"
            android:layout_row="10"
            android:layout_column="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center_horizontal"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rechts Ferse Max (in N)"
            android:id="@+id/textView29"
            android:layout_row="11"
            android:layout_column="0"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/rightHeelMaxEditText"
            android:layout_row="11"
            android:layout_column="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center_horizontal"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rechts Ferse Min (in N)"
            android:id="@+id/textView30"
            android:layout_row="12"
            android:layout_column="0"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/rightHeelMinEditText"
            android:layout_row="12"
            android:layout_column="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center_horizontal"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Low Pass Filter"
            android:id="@+id/textView31"
            android:layout_row="14"
            android:layout_column="0"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lowPassFilterCheckBox"
            android:layout_row="14"
            android:layout_column="1"
            android:checked="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Linker Glättungswert"
            android:id="@+id/textView32"
            android:layout_row="15"
            android:layout_column="0"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/leftSmoothingEditText"
            android:layout_row="15"
            android:layout_column="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center_horizontal"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rechter Glättungswert"
            android:id="@+id/textView33"
            android:layout_row="16"
            android:layout_column="0"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/rightSmoothingEditText"
            android:layout_row="16"
            android:layout_column="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center_horizontal"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Zero Line Filter"
            android:id="@+id/textView34"
            android:layout_row="17"
            android:layout_column="0"/>



        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zeroLineFilterCheckBox"
            android:layout_row="17"
            android:layout_column="1"
            android:checked="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Linker Zero Line Wert (in N)"
            android:id="@+id/textView35"
            android:layout_row="18"
            android:layout_column="0"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/leftZeroLineValueEditText"
            android:layout_row="18"
            android:layout_column="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center_horizontal"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rechter Zero Line Wert (in N)"
            android:id="@+id/textView36"
            android:layout_row="19"
            android:layout_column="0"/>

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/rightZeroLineValueEditText"
            android:layout_row="19"
            android:layout_column="1"
            android:background="@drawable/edit_text_style"
            android:gravity="center_horizontal"
            android:inputType="number"/>
    </GridLayout>




</LinearLayout>
</ScrollView>

