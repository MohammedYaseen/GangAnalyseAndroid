<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.davengo.ga.RecordingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rechte Sohle"
        android:id="@+id/textView21"
        android:layout_marginStart="26dp"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="RRRRRRRRRRRR"
        android:id="@+id/rightSoleBLId"
        android:layout_alignTop="@+id/textView21"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mittelwert"
        android:id="@+id/textView37"
        android:layout_below="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:layout_marginTop="27dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0.0"
        android:id="@+id/rightSoleAverage"
        android:textStyle="bold"
        android:textColor="#840968ff"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/textView37"
        android:layout_alignStart="@+id/rightSoleBLId"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Linke Sohle"
        android:id="@+id/textView39"
        android:layout_above="@+id/textView41"
        android:layout_alignStart="@+id/textView37"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="LLLLLLLLLLLL"
        android:id="@+id/leftSoleBLId"
        android:layout_alignTop="@+id/textView39"
        android:layout_alignStart="@+id/rightSoleBLId"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mittelwert"
        android:id="@+id/textView41"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView39"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0.0"
        android:id="@+id/leftSoleAverage"
        android:textStyle="bold"
        android:textColor="#840968ff"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/textView41"
        android:layout_alignStart="@+id/leftSoleBLId"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_record"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Start"
        android:background="#5cff43"
        style="@style/button"/>
</RelativeLayout>
