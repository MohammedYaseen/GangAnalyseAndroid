<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/activity_vertical_margin"
              style="@style/Theme.AppCompat.Light"
              android:background="#4da1ff">


    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="17sp"
        android:text="@string/text_list_devices"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />


    <ListView
        android:id="@+id/lv_paired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:cacheColorHint="#00000000"
        android:touchscreenBlocksFocus="true"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="bottom|center"
        android:background="@drawable/background_with_shadow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bitte klicken Sie auf das Ger채t, um die Sohle auszuw채hlen ..."
            android:id="@+id/infoTextView"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rechte Sohle nicht ausgew채hlt"
            android:id="@+id/rightSoleBLId"
            android:layout_marginTop="5dp"
            android:textColor="#ff1c1bff"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/leftSoleTextView"
            android:textColor="#ff1c1bff"
            android:textSize="15dp"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:text="Linke Sohle nicht ausgew채hlt"
            android:textAlignment="center"
            android:shadowColor="#a5d1ff"
            android:password="false"
            android:layout_marginLeft="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/next"
            android:id="@+id/nextButton"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp"
            android:gravity="bottom|center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            style="@style/button"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_margin="10dp"/>

    </LinearLayout>

</RelativeLayout>
